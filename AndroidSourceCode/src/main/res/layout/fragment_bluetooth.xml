<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Bluetooth Devices:"
        android:textSize="@dimen/abc_text_size_small_material" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="326dp"
        android:id="@+id/listView_bt_devices"
        android:textSize="@dimen/abc_text_size_small_material"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search For BT Devices"
        android:textSize="@dimen/abc_text_size_small_material"
        android:id="@+id/button_bt_scan"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/listView_bt_devices"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Scanning"
        android:textSize="@dimen/abc_text_size_small_material"
        android:id="@+id/button_bt_stop"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/button_bt_scan"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
