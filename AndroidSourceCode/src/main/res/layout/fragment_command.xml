<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wiflyInst"
        android:id="@+id/textView_wiflyinst"
        android:editable="false"
        android:textSize="14sp"
        android:gravity="center"
        android:padding="5dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ll_wiflybuttons"
        android:layout_gravity="center">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Turn On Command Mode"
            android:id="@+id/button_wifly$$$"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="command setup"
            android:id="@+id/button_wiflysetup"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Scan For Wireless Networks"
            android:id="@+id/button_wiflyscan"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Reboot Wifly Module"
            android:id="@+id/button_wiflyreboot"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="RSSI"
            android:id="@+id/button_wiflyRSSI"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="show net"
            android:id="@+id/button_wiflyshownet"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Complete Wireless Setup"
            android:id="@+id/button_exitwifisetup"/>


    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView_holdlog"
        android:layout_below="@+id/container_entercommand"
        android:layout_above="@+id/button_clearlog"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/textView_commandlog"
            android:layout_marginTop="10dp"/>

    </ScrollView>


</LinearLayout>